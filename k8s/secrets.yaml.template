# Secrets Template for Hybrid LLM Pretraining
# 
# INSTRUCTIONS:
# 1. Copy this file to secrets.yaml
# 2. Fill in your API keys (base64 encoded)
# 3. Apply with: kubectl apply -f secrets.yaml
#
# To base64 encode a value:
#   echo -n "your-api-key" | base64
#
# IMPORTANT: Never commit secrets.yaml to git!

apiVersion: v1
kind: Secret
metadata:
  name: hybrid-llm-secrets
  namespace: ucsdfutures
type: Opaque
data:
  # ClearML credentials (get from app.clear.ml -> Settings -> Workspace -> Create credentials)
  clearml-web-host: <BASE64_ENCODED_VALUE>     # e.g., echo -n "https://app.clear.ml" | base64
  clearml-api-host: <BASE64_ENCODED_VALUE>     # e.g., echo -n "https://api.clear.ml" | base64  
  clearml-files-host: <BASE64_ENCODED_VALUE>   # e.g., echo -n "https://files.clear.ml" | base64
  clearml-api-access-key: <BASE64_ENCODED_VALUE>
  clearml-api-secret-key: <BASE64_ENCODED_VALUE>
  
  # Hugging Face token (get from huggingface.co -> Settings -> Access Tokens)
  hf-token: <BASE64_ENCODED_VALUE>
  
  # WandB API key (optional - get from wandb.ai -> Settings -> API keys)
  wandb-api-key: <BASE64_ENCODED_VALUE>
